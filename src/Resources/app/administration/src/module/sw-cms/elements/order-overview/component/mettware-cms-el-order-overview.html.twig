                        </div>
                        <div>
                            {{ $tc('mettware-plugin.cms.orderOverview.summary.totalPrice') }}
                            : €4.5
                        </div>
                    </div>
                    <div class="col-3 message-wrapper">
                        <button type="button"
                                class="btn btn-danger">
                            {{ $tc('mettware-plugin.cms.orderOverview.summary.stopButton') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
