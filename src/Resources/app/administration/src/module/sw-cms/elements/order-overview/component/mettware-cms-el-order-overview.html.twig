        </table>

        <div v-if="showSummary">
            <div
                class="">{{ $tc('mettware-plugin.cms.orderOverview.summary.title') }}</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    Count: 2x Mett Bun - With Onions
                </li>
                <li class="list-group-item">
                    Count: 1x Mett Bun - Without Onions
                </li>
            </ul>
