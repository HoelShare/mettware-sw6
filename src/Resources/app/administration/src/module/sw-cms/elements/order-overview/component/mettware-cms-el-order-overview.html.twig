{% block mettware_cms_element_order_overview %}
    <div class="mettware-cms-el-order-overview">
        <table v-if="showDetails">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{ $tc('mettware-plugin.cms.orderOverview.list.orderNumber') }}</th>
                <th scope="col">{{ $tc('mettware-plugin.cms.orderOverview.list.name') }}</th>
                <th scope="col">{{ $tc('mettware-plugin.cms.orderOverview.list.order') }}</th>
                <th scope="col">{{ $tc('mettware-plugin.cms.orderOverview.list.manufacturer') }}</th>
                <th scope="col">{{ $tc('mettware-plugin.cms.orderOverview.list.count') }}</th>
                <th scope="col" colspan="2">{{ $tc('mettware-plugin.cms.orderOverview.list.price') }}</th>
